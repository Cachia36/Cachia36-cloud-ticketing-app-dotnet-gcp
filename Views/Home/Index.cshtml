@{
    var role = Context.Session.GetString("Role") ?? "User";
}

@if (User.Identity.IsAuthenticated)
{
    <h1>Welcome!</h1>
    @if(role == "User")
    {
        <a asp-controller="Tickets" asp-action="SubmitTicket">Click here to submit a ticket</a>
        <br>
        <a asp-controller="User" asp-action="UserDashboard">View your submitted tickets</a>
    }
    else
    {
        <a asp-controller="Technician" asp-action="TechnicianDashboard">Click here to view all tickets</a>
    }
}
else
{
    <h1>Welcome!</h1>
    <a asp-controller="Authenticator" asp-action="Index">Please log in to continue!</a>
}

    <div class="position-fixed bottom-0 start-0 p-3" style="z-index: 1100">
        <div id="homeToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
